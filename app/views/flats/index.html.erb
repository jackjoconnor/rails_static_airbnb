<div class="wrapper-grey padded">
  <div class="container">
    <h1 class="text-center">Selection of Flats in Paris:</h1>
    <p class="text-center">Rent unique places to stay from local hosts in Paris.</p>
    <div class="row">
     <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/paris')">
          <div class="card-category">Paris</div>
          <div class="card-description">
            <%= link_to flat["name"], flat_path(flat["id"]) %>
            <%= flat["price"] %> <%= flat["priceCurrency"] %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
